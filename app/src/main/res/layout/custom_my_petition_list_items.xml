<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/dimen_5"
        card_view:cardElevation="@dimen/dimen_4"
        card_view:contentPadding="@dimen/dimen_5"
        android:id="@+id/card_view"
        android:background="@android:color/white"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_light"
                        android:text="Petition No:"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:padding="@dimen/dimen_5"/>
                    <TextView
                        android:id="@+id/tv_petitionNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_light"
                        android:text="12345"
                        android:gravity="left"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_10"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.4"
                    android:layout_gravity="left"
                    android:gravity="left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/montserrat_light"
                        android:drawableRight="@drawable/ic_clock_16"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_10"/>
                    <TextView
                        android:fontFamily="@font/montserrat_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_complaintDate"
                        android:layout_gravity="fill_horizontal"
                        android:gravity="left|center"
                        android:drawablePadding="@dimen/dimen_5"
                        android:text="On 12/08/2019 7.15pm"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_weight="0.3">

                    <TextView
                        android:fontFamily="@font/montserrat_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complaint for cheating"
                        android:id="@+id/tv_complaint"
                        android:padding="@dimen/dimen_10"/>

                    <TextView
                        android:id="@+id/tv_petitioner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="RK Reddy"
                        android:textStyle="bold"
                        android:padding="@dimen/dimen_10" />

                    <TextView
                        android:fontFamily="@font/montserrat_light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_status"
                        android:text="Status: Not Verified"
                        android:textStyle="bold"
                        android:padding="@dimen/dimen_10"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.4"
                    android:layout_marginTop="@dimen/dimen_5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="1"
                            android:src="@drawable/petition_image" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/dimen_5"
                            android:src="@drawable/petition_image"
                            />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/dimen_5"
                            android:src="@drawable/petition_image"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/dimen_10">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/dimen_5"
                            android:src="@drawable/petition_image"
                            />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/dimen_5"
                            android:src="@drawable/petition_image"
                            />

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="@dimen/dimen_50"
                            android:layout_height="@dimen/dimen_50"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:src="@drawable/ic_add_item"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_5"
                android:visibility="gone">

                <Button
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_light"
                    android:id="@+id/tv_attachmentsNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:layout_weight="0.4"
                    android:text="View Attachments"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dimen_14"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
